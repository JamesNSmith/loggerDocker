<div class="signup">
  <div class="userContainer">
    <div class="inputForm">

    <h1>Sign up</h1>

    <%= form_for(@user, url: '/signup') do |f| %>
    
      <ul>
          <!--<li><%= f.label "Name " %></li>-->
          <li>
            <%= f.text_field :first_name, :placeholder => "First Name", :id => "first", :class => @status %>
            <%= f.text_field :last_name, :placeholder => "Last Name", :id => "last", :class => @status %>  
          </li>
          <!--<li><%= f.label "Username " %></li>-->
          <li><%= f.text_field :username, :placeholder => "Username", :class => @status %></li> 	
      	  <!--<li><%= f.label "Email " %></li>-->
          <li><%= f.email_field :email, :placeholder => "Email", :class => @status %></li>
      	  <!--<li><%= f.label "Password " %></li>-->
          <li><%= f.password_field :password, :placeholder => "Password", :class => @status%></li> 
          <li><%= f.password_field :password_confirmation, :placeholder => "Confirm Password", :class => @status%></li> 
       </ul>
  	 
  	<div class="actions"> 
      <%= f.submit "Create", class: "form-btn"%> 
  	</div> 
    <% end %>
 

    </div>
  </div>
</div>