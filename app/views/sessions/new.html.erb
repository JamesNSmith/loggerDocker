<div class="login">
  <div class="userContainer">
	<div class="inputForm">

      <h1>Log in</h1>
			
	  <%= form_for(:session, url: login_path) do |f| %> 
  	  <%= f.email_field :email, :placeholder => "Email", :class => @status %> 
  	  <%= f.password_field :password, :placeholder => "Password", :class => @status %> 
  	  <%= f.submit "Log in", class: "form-btn" %>
      <p><%= link_to "forgotten password?", user_link_path %></p>
	  <% end %>
		
    </div>
  </div>
</div>