<div class="login">
  <div class="userContainer">
	<div class="inputForm">

      <h1>Log in</h1>
			
	  <%= form_for(:session, url: login_path) do |f| %> 

    <ul>
  	  <li><%= f.email_field :email, :placeholder => "Email", :autocomplete => "email", :value => @email %></li>
  	  <li><%= f.password_field :password, :placeholder => "Password", :autocomplete => "password" %></li>
    </ul> 

      <%= f.hidden_field :redirectUrl, value: @redirect %>

      <div class="actions"> 
  	   <%= f.submit "Log in", class: "form-btn" %>
      </div>
      
      <p><%= link_to "forgotten password?", new_password_reset_path %></p>
	  <% end %>
		
    </div>
  </div>
</div>